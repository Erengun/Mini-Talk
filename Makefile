CC=gcc
CFLAGS=-Wall -Wextra -Werror
printf= ft_printf/libftprintf.a

CLİENT = client
SERVER = server

# $@ - target
# $^ - butun dependen
# $< - ilk dependen

all: $(SERVER) $(CLİENT)

$(SERVER):
	$(CC) $(CFLAGS) server.c utils.c $(printf) -o $@

$(CLİENT):
	$(CC) $(CFLAGS) client.c utils.c $(printf) -o $@

clean:
	rm server client

fclean: clean

re: fclean all

coffee:
